extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Title of the record' name='title' required='true' value=(undefined===record ? '' : record.title) )
    div.form-group
      label(for='artist') Artist:
      input#artist.form-control(type='text', placeholder='Recording artist' name='artist' required='true' value=(undefined===record ? '' : record.artist) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='text', placeholder='A breif description about the genre' name='description') #{undefined===record ? '' : record.description}
    div.form-group
      label(for='format') Format:
      input#format.form-control(type='text', placeholder='Record format' name='format' value=(undefined===record ? '' : record.format) )
    div.form-group
      label(for='release') Release:
      input#release.form-control(type='text', placeholder='Release date or year' name='release' value=(undefined===record ? '' : record.release) ) 
    div.form-group
      label(for='rating') Rating:
      input#rating.form-control(type='number', placeholder='Rating 0-5' name='rating', min=0, max=5, step=0.01, value=(undefined===record ? '' : record.rating) ) 
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='$420.69' name='price', min=0, step=0.01,  value=(undefined===record ? '' : record.price) ) 
    div.form-group
      label(for='quantity') Copy Quantity:
      input#quantity.form-control(type='number', placeholder='' name='quantity', min=0, value=(undefined===record ? '' : record.quantity) ) 
    div.form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg